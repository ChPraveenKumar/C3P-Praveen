{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "angular.io-example"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "../node_modules/bootstrap/dist/css/bootstrap.min.css",
		    "../node_modules/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css",
        "styles.css",
        "../src/assets/css/codemirror.css",
        "../src/assets/css/mergely.css"
      ],
      "scripts": [
        "../node_modules/jquery/dist/jquery.min.js",
        "../node_modules/bootstrap/dist/js/bootstrap.min.js",
		    "../node_modules/difflib/diflibjs/global.js",
        "../node_modules/difflib/diflibjs/language.js",
        "../node_modules/difflib/diflibjs/options.js",
        "../node_modules/difflib/diflibjs/finalFile.js",
        "../node_modules/difflib/diflibjs/dom.js",
        "../node_modules/difflib/diflibjs/csspretty.js",
        "../node_modules/difflib/diflibjs/csvpretty.js",
        "../node_modules/difflib/diflibjs/diffview.js",
        "../node_modules/difflib/diflibjs/jspretty.js",
        "../node_modules/difflib/diflibjs/markuppretty.js",
        "../node_modules/difflib/diflibjs/prettydiff.js",
        "../node_modules/moment/min/moment.min.js",
        "../node_modules/eonasdan-bootstrap-datetimepicker/src/js/bootstrap-datetimepicker.js",
        "../src/assets/js/codemirror.min.js",
        "../src/assets/js/mergely.min.js",
        "../src/assets/js/custom.js",
        "../src/assets/js/mergely.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {},
    "serve": {
      "port": 4200,
      "host": "localhost"
    }
  }
}
